    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbxShow"
                 IsReadOnly="True"
                 Text="{Binding UserInputPwd,Mode=TwoWay}"
                 TextChanged="tbxShow_TextChanged"
                 TextAlignment="Right"
                 Grid.ColumnSpan="4"
                 FontSize="{Binding ElementName=tbxShow,Path=ActualHeight,Converter={StaticResource fontsizeConverter},ConverterParameter='CalFontSize'}"
                >
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{ThemeResource SystemChromeMediumColor}" />
            </TextBox.BorderBrush>
        </TextBox> 
                
        <Button  Click="Button_Click" Grid.Row="1"
                     Content="7"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="1" Grid.Column="1" 
                Content="8"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="1" Grid.Column="2"
                Content="9"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="1" Grid.Column="3"
                Content="+"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="2" Grid.Column="0"
                Content="4"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="2" Grid.Column="1"
                Content="5"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="2" Grid.Column="2"
                Content="6"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="3" Grid.Column="0"
                Content="1"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="3" Grid.Column="1"
                Content="2"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="3" Grid.Column="2" 
                Content="3"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="3" Grid.Column="3"
                Content="*"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="4" Grid.Column="0"
                Content="C"
                 FontSize="{Binding ElementName=tbxShow,Path=FontSize}"
                />
        <Button Click="Button_Click" Grid.Row="4" Grid.Column="1" 
