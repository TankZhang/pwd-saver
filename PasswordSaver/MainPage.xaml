<Page
    x:Class="PasswordSaver.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PasswordSaver"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:PasswordSaver.Models"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Resources>
        <local:CollapseBindingHelper x:Key="collapseConverter"/>
        <local:VisibleBindingHelper x:Key="visibleConverter"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button Name="btnHamburg"
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;"
                    FontSize="20"
                    Width="45"
                    Height="45"
                    HorizontalAlignment="Center"
                    Click="btnHamburg_Click"/>
            <TextBlock Name="tblTitle"
                       RelativePanel.RightOf="btnHamburg"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="20,0,0,0"
                       />
        </RelativePanel>
        <SplitView Grid.Row="1"
                   DisplayMode="CompactInline"
                   Name="spltvMain"
                   OpenPaneLength="120"
                   CompactPaneLength="45">
            <SplitView.Pane>
                <ListBox SelectionMode="Single"
                         SelectionChanged="ListBox_SelectionChanged">
                    <ListBoxItem Name="lstiMain">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xe80F;"
                                       FontSize="20"/>
                            <TextBlock Text="计算"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="lstiList"
                                 Visibility="{Binding IsCheck,Converter={StaticResource visibleConverter},Mode=TwoWay}"
                                 IsSelected="{Binding IsListVisible,Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE728;"
                                       FontSize="20"/>
                            <TextBlock Text="列表"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="lstiAdd"
                                 Visibility="{Binding IsCheck,Converter={StaticResource visibleConverter},Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xe109;"
                                       FontSize="20"/>
                            <TextBlock Text="添加"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="lstiSet"
                                 Visibility="{Binding IsCheck,Converter={StaticResource visibleConverter},Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xe115;"
                                       FontSize="20"/>
                            <TextBlock Text="设置"
                                       FontSize="18"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <ProgressRing Name="prgrsrWaite" 
                                  IsActive="True"
                                  Visibility="{Binding IsProgressRingVisible,Converter={StaticResource visibleConverter}}"
                                  Height="150"
                                  Width="150"/>
                    <Grid Name="grdPwds"
                          Visibility="Collapsed">
                        <Grid Name="grdPwdsList"
                              Visibility="{Binding IsGrdPwdsListVisible,Converter={StaticResource visibleConverter}}">
                            <ScrollViewer>
                                <StackPanel Orientation="Vertical">
                                    <Button Name="btnList" Click="btnList_Click">添加</Button>
                                    <Button Name="btnSave" Click="btnSave_Click">保存</Button>
                                    <Button Name="btnChangeCode" Click="btnChangeCode_Click">改密码</Button>
                                    <ListView ItemsSource="{x:Bind VM.RecordItems}"
                                              Name="lstvList"
                                              SelectionChanged="lstvList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:RecordItem">
                                                <StackPanel>
                                                    <local:UcDataItem x:Name="ucDataItem"/>
                                                    <Button  Content="ceshis"
                                                             Name="btnxiugai"
                                                             Click="Button_Click_1"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                        <local:UcItemDetail x:Name="ucPwdModify"
                                            Visibility="{Binding IsUcPwdModifyVisible,Converter={StaticResource visibleConverter}}"/>
                    </Grid>
                    <Grid Name="grdAdd"
                          Visibility="Collapsed">
                        <Button>add</Button>
                    </Grid>
                    <Grid Name="grdSet"
                          Visibility="Collapsed">
                        <Button>set</Button>
                    </Grid>
                    <local:UcCalculate Visibility="{Binding IsCheck,Converter={StaticResource collapseConverter},Mode=TwoWay}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
