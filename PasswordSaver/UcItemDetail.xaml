    <Grid Margin="5,5,10,5">
        <StackPanel>
            <StackPanel Name="stkpInfo"  HorizontalAlignment="Stretch">
                <TextBlock Margin="0,5,5,0">网站：</TextBlock>
                <TextBox Text="{Binding RecordItemToModify.WebSite ,Mode=TwoWay}" />
                <TextBlock Margin="0,5,5,0">账户：</TextBlock>
                <TextBox Text="{Binding RecordItemToModify.Account ,Mode=TwoWay}" />
                <StackPanel Margin="0,5,5,0" Orientation="Horizontal">
                    <TextBlock>密码：</TextBlock>
                    <TextBlock Name="tblGeneratePwd">
                        <Hyperlink Foreground="Black" Click="Hyperlink_Click">自动生成...</Hyperlink></TextBlock>
                </StackPanel>
                <TextBox Name="tbxPwd"  Text="{Binding RecordItemToModify.Pwd ,Mode=TwoWay}"/>
                <StackPanel Name="stcpGeneratePwd" Visibility="Collapsed">
                    <CheckBox Name="ckbxUpLow" Content="区分大小写"  IsChecked="True"/>
                    <CheckBox Name="ckbxPunc" Content="半角标点"  IsChecked="True"/>
                    <CheckBox Name="ckbxNum" Content="加入数字"  IsChecked="True"/>
                    <TextBox Name="tbxNum" Text="输入长度" Width="100" HorizontalAlignment="Left" GotFocus="tbxNum_GotFocus"/>
                    <Button Content="生成" Name="btnGenrt" Click="btnGenrt_Click"/>
                </StackPanel>
                <TextBlock Margin="0,5,5,0">备注：</TextBlock>
                <TextBox Text="{Binding RecordItemToModify.Note ,Mode=TwoWay}"/>
            </StackPanel>
            <StackPanel Name="stkpBtn" 
                        RelativePanel.Below="stkpInfo"
                        Orientation="Horizontal">
                <Button Name="btnModify"
                        Content="修改"
                        Command="{Binding ModifyCmd}"
                        Visibility="{Binding IsModifyOrAdd,Converter={StaticResource visibleConverter}}"
                        />
                <Button Name="btnSave"
                        Content="保存"
                        Command="{Binding AddCmd}"
                        Visibility="{Binding IsModifyOrAdd,Converter={StaticResource collapseConverter}}"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
